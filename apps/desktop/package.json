{
	"name": "jumpchain-nexus-desktop",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"predev": "npm run test:smoke",
		"dev": "vite",
		"build": "npm run build:sidecar && npm run build:ui",
		"build:ui": "tsc -b && vite build",
		"build:sidecar": "node ./scripts/build-sidecar.mjs",
		"preview": "vite preview",
		"tauri:dev": "npm run build:sidecar && tauri dev",
		"tauri:build": "tauri build",
		"migrate": "tsx ./src/db/runMigrations.ts",
		"test": "vitest --run",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"test:coverage": "vitest --run --coverage",
		"test:smoke": "vitest --run -t \"@smoke\"",
		"test:a11y:components": "vitest --run -t \"@a11y\"",
		"test:e2e": "wdio run wdio.conf.ts",
		"test:a11y:e2e": "playwright test -c playwright.config.ts --project=a11y",
		"test:rust": "cargo test -p appsdesktop --manifest-path src-tauri/Cargo.toml",
		"test:full": "npm run test && npm run test:e2e && npm run test:a11y:e2e && npm run test:rust",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
		"format": "prettier --write ."
	},
	"dependencies": {
                "@dnd-kit/core": "^6.3.1",
                "@dnd-kit/sortable": "^8.0.0",
                "@dnd-kit/utilities": "^3.2.2",
                "@tanstack/react-query": "^5.64.2",
		"@tauri-apps/api": "^2.0.0",
		"@tauri-apps/plugin-dialog": "^2.0.0",
		"@tauri-apps/plugin-fs": "^2.0.0",
		"@tauri-apps/plugin-opener": "^2.0.0",
		"@tauri-apps/plugin-shell": "^2.0.0",
		"@tauri-apps/plugin-sql": "^2.0.0",
		"@tiptap/extension-mention": "^2.7.3",
		"@tiptap/extension-placeholder": "^2.7.3",
		"@tiptap/html": "^2.7.3",
		"@tiptap/react": "^2.7.3",
		"@tiptap/starter-kit": "^2.7.3",
		"env-paths": "^3.0.0",
		"marked": "^15.0.11",
		"pdfjs-dist": "^4.8.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router-dom": "^6.28.0",
		"react-window": "^1.8.9",
		"recharts": "^3.2.1",
		"sql.js": "^1.11.0",
		"turndown": "^7.2.0",
		"zod": "^3.24.1",
		"zustand": "^4.5.3"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.2",
		"@playwright/test": "^1.56.0",
		"@tauri-apps/cli": "^2.0.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.10.2",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@types/react-window": "^1.8.5",
		"@types/testing-library__jest-dom": "^5.14.9",
		"@types/turndown": "^5.0.5",
		"@typescript-eslint/eslint-plugin": "^8.46.0",
		"@typescript-eslint/parser": "^8.46.0",
		"@vitejs/plugin-react": "^4.6.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/eslint-plugin": "^1.3.16",
		"@wdio/cli": "^9.20.0",
		"@wdio/local-runner": "^9.20.0",
		"@wdio/mocha-framework": "^9.20.0",
		"@wdio/spec-reporter": "^9.20.0",
		"chromedriver": "^141.0.1",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jest-dom": "^5.5.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-playwright": "^2.2.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.0",
		"eslint-plugin-tauri": "file:tools/eslint-plugin-tauri",
		"eslint-plugin-testing-library": "^7.13.1",
		"jsdom": "^27.0.0",
		"prettier": "^3.6.2",
		"tsx": "^4.19.2",
		"typescript": "~5.8.3",
		"vite": "^7.0.4",
		"vitest": "^3.2.4",
		"vitest-axe": "^0.1.0",
		"webdriverio": "^9.20.0"
	},
	"overrides": {
		"@wdio/mocha-framework@9.20.0": {
			"mocha": "11.7.4"
		},
		"mocha": "11.7.4",
		"glob": "10.4.5",
		"minimatch": "9.0.5",
		"node-domexception": "file:tools/node-domexception"
	}
}
